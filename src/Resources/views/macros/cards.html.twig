{% macro dt(prompt, response, link) %}
    {% if response != '' %}
        <dt>{{ prompt }}</dt>
        <dd>
            {% if response is iterable %}
                {{ response|json_encode }}
            {% elseif response == '' %}
                <i>-</i>
            {% else %}
                {% if link %}
                    <a href="{{ link }}">{{ response }}</a>
                {% else %}
                    {{ response }}
                {% endif %}
            {% endif %}</dd>
    {% endif %}
{% endmacro %}

